<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRepoTitle"
                style="@style/Text"
                android:drawableStart="@drawable/ic_business"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Github repo" />

            <TextView
                android:id="@+id/tvRepoDescription"
                style="@style/Text"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                tools:text="this is the description of the title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLanguage"
                    style="@style/Text"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_album"
                    tools:text="language" />

                <TextView
                    android:id="@+id/tvStars"
                    style="@style/Text"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_star"
                    tools:text="stars" />

                <TextView
                    android:id="@+id/tvForks"
                    style="@style/Text"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_fork"
                    tools:text="forks" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
